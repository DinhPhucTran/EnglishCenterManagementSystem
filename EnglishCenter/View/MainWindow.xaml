                                <TextBlock Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="10" Name="tb_popupUserInfo_username"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="10" Name="tb_popupUserInfo_permission"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Popup>
            </DockPanel>
        </DockPanel>
        <TabControl Name="tabControl" Grid.Row="1" SelectedIndex="1">
            <TabItem Name="tabHome">
