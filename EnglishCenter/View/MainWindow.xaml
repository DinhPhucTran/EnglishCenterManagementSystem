                                                            VerticalAlignment="Center" HorizontalAlignment="Center" Name="bt_lv_editHV" Click="bt_editHvClick">
                                                <Button.Background>
                                                    <ImageBrush ImageSource="/EnglishCenter;component/Resources/edit.png"/>
                                                </Button.Background>
                                            </Button>
                                            <Button Grid.Row="0" Grid.RowSpan="2" Grid.Column="4" Margin="5 5 10 5" BorderThickness="0" 
                                                            VerticalAlignment="Center" HorizontalAlignment="Center" Name="bt_lv_viewHV" Click="bt_viewHvClick">
                                                <Button.Background>
                                                    <ImageBrush ImageSource="/EnglishCenter;component/Resources/info_white.png"/>
                                                </Button.Background>
                                            </Button>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                            <Popup PlacementTarget="{Binding ElementName=lv_dsHocVien}"              
