                            </Grid>


                        </Grid>
                    </ScrollViewer>
                </StackPanel>
            </TabItem>

            <TabItem Name="tabStudents">
                <TabItem.Header>
                    <WrapPanel Orientation="Horizontal">
                        <Image Width="30" Height="30" Source="/Resources/students.png"/>
                        <TextBlock Margin="5">HỌC VIÊN</TextBlock>
                    </WrapPanel>
                </TabItem.Header>

                <Grid Name="tabStudents_mainGrid" Background="#F9F9F9" Cursor="Arrow">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="7*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Row="1" Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Width="300" Height="100" Background="White">
                            <Grid.Effect>
                                <DropShadowEffect Color="#FFDCD8D8" ShadowDepth="2"/>
                            </Grid.Effect>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition/>
