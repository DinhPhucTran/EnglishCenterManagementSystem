                                           PopupAnimation="Fade"
                                           Placement="Right"
                                           HorizontalOffset="10"
                                           Name="popup_detailHV">
                                <Grid Background="White" Margin="20">
                                    <Grid.Effect>
                                        <DropShadowEffect Color="#FFC3C3C3" BlurRadius="15" Direction="280"/>
                                    </Grid.Effect>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30"/>
